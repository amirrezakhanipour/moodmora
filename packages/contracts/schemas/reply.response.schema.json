{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "moodmora://schemas/reply.response.schema.json",
  "title": "ReplyResponseData",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "suggestions", "risk", "voice_match_score"],
  "properties": {
    "mode": { "type": "string", "const": "REPLY" },
    "voice_match_score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "risk": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "score", "reasons"],
      "properties": {
        "level": { "type": "string", "enum": ["green", "yellow", "red"] },
        "score": { "type": "integer", "minimum": 0, "maximum": 100 },
        "reasons": { "type": "array", "items": { "type": "string" }, "maxItems": 10 }
      }
    },
    "hard_mode_applied": { "type": "boolean" },
    "safety_line": { "type": "string", "minLength": 1 },
    "best_question": { "type": "string", "minLength": 1 },

    "applied_contact": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "display_name"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "display_name": { "type": "string", "minLength": 1 },
        "relation_tag": { "type": "string" }
      }
    },
    "style_applied_summary": { "type": "string", "minLength": 1 },

    "suggestions": {
      "type": "array",
      "minItems": 2,
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "text", "why_it_works"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "text": { "type": "string", "minLength": 1 },
          "why_it_works": { "type": "string", "minLength": 1 },
          "emotion_preview": { "type": "array", "items": { "type": "string" }, "maxItems": 3 }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "hard_mode_applied": { "const": true } },
        "required": ["hard_mode_applied"]
      },
      "then": {
        "required": ["safety_line", "best_question"],
        "properties": {
          "suggestions": { "minItems": 2, "maxItems": 2 }
        }
      }
    }
  ]
}